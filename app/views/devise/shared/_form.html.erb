<%= form_with(model: [post, post.comments.build]) do |form| %>
  <%= form.label :body, 'Make a comment', class: "block font-bold mb-2 text-gray-700 text-sm" %>
  <%= form.text_area :body, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none shadow focus:shadow-outline" %>
  <div class="flex" style="justify-content: end;">
    <%= form.submit "Reply", class: "button bg-blue-500 hover:bg-blue-700 text-white p-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>  
<% end %>